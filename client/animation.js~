var Sprite = Class.extend({
	init: function(game, image, width, height) {
		this.game = game;
		this.image = image;
		this.width = width;
		this.height = height;
	},

	draw: function(delta, x, y) {
		var ctx = this.game.ctx;

		ctx.drawImage(
			this.image,
			x, y,
			this.width, this.height
		);
	}
});

var Animation = Class.extend({
	init: function(game, image, width, height) {
		this._super.apply(this._super, arguments);

		this.elapsedTime = 0;
		this.frameDuration = 1;
		this.totalTime = (this.image.width / width) * this.frameDuration;
	},

	draw: function(delta, x, y, scaleBy) {
		var ctx = this.game.ctx;

		this.elapsedTime += delta;

		ctx.drawImage(
			this.image,
			this.currentFrame() * this.width, 0,
			this.width, this.height,
			x, y,
			this.width * scaleBy,
			this.height * scaleBy
		);
	},

	currentFame: function() {
		return Math.floor(this.elapsedTime / this.frameDuration);
	},

	isDone: function() {
		return (this.elapsedTime >= this.totalTime);
	}
});